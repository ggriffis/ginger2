<script src="http://code.jquery.com/jquery-1.7.2.min.js"></script>
<script src="http://cdn.embed.ly/jquery.embedly-3.1.1.min.js"></script>
<script type="text/javascript">
  $('document').ready(function(){
    $('#video_url').embedly({
      query: { maxwidth: 700, wmode: 'transparent' },
      method: 'after',
      key: '454314ac5d2c4cfa990b5444d71874ef'
    });
  });
</script>
<div class="container pages-body">
  <div id="video_url">
    <h2><%= @video.title %></h2>
    <p><%= create_pretty_text(@video.description) %></p>
    <p><%= link_to @video.url, @video.url %></p>
  </div>
  <%= link_to "Back", :back %>
</div>
